@prefix lotr: <http://example.org/lotr#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

lotr:Ancestry a owl:Class ;
    rdfs:subClassOf lotr:Thing .

lotr:Continent a owl:Class ;
    rdfs:subClassOf lotr:Thing .

lotr:Character a owl:Class ;
    rdfs:subClassOf lotr:Thing .

lotr:CharacterShape a sh:NodeShape ;
    sh:property lotr:CharacterShape-hasAncestry,
        lotr:CharacterShape-hasHome ;
    sh:targetClass lotr:Character .

lotr:CharacterShape-hasAncestry a sh:PropertyShape ;
    sh:minCount 1 ;
    sh:node lotr:CharacterShape ;
    sh:path lotr:hasAncestry .

lotr:CharacterShape-hasHome a sh:PropertyShape ;
    sh:minCount 1 ;
    sh:node lotr:LocationShape ;
    sh:path lotr:hasHome .

lotr:Location a owl:Class ;
    rdfs:subClassOf lotr:Thing .

lotr:LocationShape a sh:NodeShape ;
    sh:property lotr:LocationShape-isInRegion ;
    sh:targetClass lotr:Location .

lotr:LocationShape-isInRegion a sh:PropertyShape ;
    sh:minCount 1 ;
    sh:node lotr:RegionShape ;
    sh:path lotr:isInRegion .

lotr:Region a owl:Class ;
    rdfs:subClassOf lotr:Thing .

lotr:RegionShape a sh:NodeShape ;
    sh:property lotr:RegionShape-isInContinent ;
    sh:targetClass lotr:Region .

lotr:RegionShape-isInContinent a sh:PropertyShape ;
    sh:minCount 1 ;
    sh:node lotr:ContinentShape ;
    sh:path lotr:isInContinent .

lotr:Thing a owl:Class .

